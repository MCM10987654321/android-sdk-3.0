<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.core.vmfiveadnetwork"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <!-- To get imsi & imei -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    
    <application
        android:name="com.core.vmfiveadnetwork.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.core.vmfiveadnetwork.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleBanner"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleCard"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleCustom"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleInterstitialView"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleListView"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleListViewWithBanner"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleMediation"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleRecyclerView"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleRecyclerViewMoPub"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.vmfiveadnetwork.ExampleView"
            android:label="@string/app_name" />
        <activity
            android:name="com.core.adnsdk.InterstitialActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.Transparent"></activity>

        <activity
            android:name="com.core.adnsdk.FullScreenVideoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:hardwareAccelerated="true"
            android:screenOrientation="sensorLandscape"></activity>

        <activity
            android:name="com.core.adnsdk.ExpandScreenVideoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:hardwareAccelerated="true"></activity>

        <activity
            android:name="com.core.adnsdk.RewardActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:hardwareAccelerated="true"
            android:screenOrientation="sensorLandscape"></activity>

        <activity android:name="com.mopub.common.MoPubBrowser"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="de976d788fb534b84d2c22e54d8de51cec1e1482" />
    </application>

</manifest>
